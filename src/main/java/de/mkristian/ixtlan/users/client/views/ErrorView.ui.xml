  xmlns:t="urn:import:de.mkristian.ixtlan.rideboards.client.editors">

  <g:FlowPanel styleName="gwt-rails-display rideboard-errors">

    <g:Label>Errors</g:Label>

    <g:FlowPanel styleName="gwt-rails-buttons">
