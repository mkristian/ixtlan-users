<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
  xmlns:r="urn:import:de.mkristian.gwt.rails.editors"
  xmlns:c="urn:import:de.mkristian.ixtlan.users.client.editors">

  <g:FlowPanel>

    <g:FlowPanel ui:field="signature" styleName="gwt-rails-model-signature">
      <g:Label>id: </g:Label>
      <g:NumberLabel ui:field="id" />
      <g:Label>created at: </g:Label>
      <g:DateLabel ui:field="createdAt" predefinedFormat="DATE_TIME_MEDIUM"/>
      <g:Label>updated at: </g:Label>
      <g:DateLabel ui:field="updatedAt" predefinedFormat="DATE_TIME_MEDIUM" />
      <g:Label>modified by: </g:Label>
      <r:UserLabel ui:field="modifiedBy" />
    </g:FlowPanel>

    <g:FlowPanel styleName="gwt-rails-model-fields">
      <g:HTMLPanel>
        <label name="login">Login</label>
        <g:TextBox ui:field="login"/>
      </g:HTMLPanel>
      <g:HTMLPanel>
        <label name="email">Email</label>
        <g:TextBox ui:field="email"/>
      </g:HTMLPanel>
      <g:HTMLPanel>
        <label name="name">Name</label>
        <g:TextBox ui:field="name"/>
      </g:HTMLPanel>      
      <g:HTMLPanel ui:field="atTokenPanel">
        <label name="atToken">AT token</label>
        <g:TextBox ui:field="atToken"/>
      </g:HTMLPanel>
      <g:HTMLPanel ui:field="groupsPanel">
        <label name="groups">Groups</label>
        <c:GroupCheckBoxes ui:field="groups"/>
      </g:HTMLPanel>
      
    </g:FlowPanel>

  </g:FlowPanel>

</ui:UiBinder>
