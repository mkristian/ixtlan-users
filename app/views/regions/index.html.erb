<h1>Listing regions</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @regions.each do |region| %>
  <tr>
    <td><%= region.name %></td>
<% if allowed?(:regions, :show) %>
    <td><%= link_to 'Show', region %></td>
<% end %>
<% if allowed?(:regions, :update) %>
    <td><%= link_to 'Edit', edit_region_path(region) %></td>
<% end %>
<% if allowed?(:regions, :destroy) %>
    <td><%= link_to 'Destroy', region_path(region) + "?region[updated_at]=#{region.updated_at.utc.strftime('%Y-%m-%d %H:%M:%S') + ("%06d" % region.updated_at.utc)}", :confirm => 'Are you sure?', :method => :delete %></td>
<% end %>
  </tr>
<% end %>
</table>

<br />

<% if allowed?(:regions, :create) %>
<%= link_to 'New Region', new_region_path %>
<% end %>
