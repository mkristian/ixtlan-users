<h1>Listing users</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Email</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.email %></td>
    <td><%= user.name %></td>
<% if allowed?(:users, :show) %>
    <td><%= link_to 'Show', user %></td>
<% end %>
<% if allowed?(:users, :update) %>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
<% end %>
<% if allowed?(:users, :destroy) %>
    <td><%= link_to 'Destroy', user_path(user) + "?user[updated_at]=#{user.updated_at.utc.strftime('%Y-%m-%d %H:%M:%S') + ("%06d" % user.updated_at.utc)}", :confirm => 'Are you sure?', :method => :delete %></td>
<% end %>
  </tr>
<% end %>
</table>

<br />

<% if allowed?(:users, :create) %>
<%= link_to 'New User', new_user_path %>
<% end %>
