<h1>Listing applications</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @applications.each do |application| %>
  <tr>
    <td><%= application.name %></td>
    <td><%= application.url %></td>
<% if allowed?(:applications, :show) %>
    <td><%= link_to 'Show', application %></td>
<% end %>
<% if allowed?(:applications, :update) %>
    <td><%= link_to 'Edit', edit_application_path(application) %></td>
<% end %>
<% if allowed?(:applications, :destroy) %>
    <td><%= link_to 'Destroy', application_path(application) + "?application[updated_at]=#{application.updated_at.utc.strftime('%Y-%m-%d %H:%M:%S') + ("%06d" % application.updated_at.utc)}", :confirm => 'Are you sure?', :method => :delete %></td>
<% end %>
  </tr>
<% end %>
</table>

<br />

<% if allowed?(:applications, :create) %>
<%= link_to 'New Application', new_application_path %>
<% end %>
